@page
@model RazorPagesLab.Pages.AddressBook.DeleteModel
@{
    ViewData["Title"] = "Delete Address";
}

<h1>Delete Address</h1>

<p>Are you certain you want to delete this address?</p>

<div>
    <h4>Address Details</h4>
    <hr />
    <div class="row">
        <div class="col-sm-2 font-weight-bold">
            Line 1
        </div>
        <div class="col-sm-10">
            @(Model.DeleteAddressRequest?.Line1 ?? "N/A")
        </div>
        <div class="col-sm-2 font-weight-bold">
            Line 2
        </div>
        <div class="col-sm-10">
            @(Model.DeleteAddressRequest?.Line2 ?? "N/A")
        </div>
        <div class="col-sm-2 font-weight-bold">
            City
        </div>
        <div class="col-sm-10">
            @(Model.DeleteAddressRequest?.City ?? "N/A")
        </div>
        <div class="col-sm-2 font-weight-bold">
            State
        </div>
        <div class="col-sm-10">
            @(Model.DeleteAddressRequest?.State ?? "N/A")
        </div>
        <div class="col-sm-2 font-weight-bold">
            Postal Code
        </div>
        <div class="col-sm-10">
            @(Model.DeleteAddressRequest?.PostalCode ?? "N/A")
        </div>
    </div>

    <form method="post">
        <input type="hidden" name="DeleteAddressRequest.Id" value="@(Model.DeleteAddressRequest?.Id)" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>


